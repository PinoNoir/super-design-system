{
  "name": "sds-styles",
  "description": "A collection of reusable CSS styles built with SASS.",
  "version": "1.0.0",
  "author": {
    "name": "Nicholas Pino",
    "email": "nickpino.designs@gmail.com"
  },
  "license": "MIT",
  "keywords": [
    "css",
    "library",
    "scss",
    "styles"
  ],
  "browserslist": [
    "defaults"
  ],
  "type": "module",
  "main": "./lib/bcc/global.min.css",
  "exports": {
    ".": "./lib/bcc/global.min.css",
    "./bcc": "./lib/bcc/global.min.css",
    "./tsc": "./lib/tsc/global.min.css",
    "./core": "./lib/core/global.min.css"
  },
  "scripts": {
    "build": "pnpm --filter ../sds-tokens run build && node scripts/build.js buildAll",
    "build:theme": "node scripts/build.js buildTheme",
    "clean": "node scripts/build.js clean",
    "watch": "node scripts/watch.js watch bcc",
    "watch:all": "node scripts/watch.js watchAll",
    "lint": "stylelint ./**/*.scss",
    "lint:fix": "stylelint ./**/*.scss --fix"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "postcss-cli": "^11.0.0",
    "rimraf": "^6.0.1",
    "sass": "^1.69.5",
    "stylelint": "^16.12.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "stylelint-scss": "^6.10.0"
  },
  "dependencies": {
    "sds-tokens": "workspace:^"
  },
  "lint-staged": {
    "*.scss": "pnpm lint:fix"
  }
}
