{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "apps/react-sandbox/*": ["react-sandbox/src/*"],
      "apps/gen-ai/": ["gen-ai/src/*"],
      "packages/mui-themes/*": ["mui-themes/src/*"],
      "packages/sds-ui/*": ["sds-ui/src/*"],
      "packages/sds-tokens/*": ["sds-tokens/src/*"],
      "packages/sds-styles/*": ["sds-styles/src/*"]
    }
  }
}
